# /etc/nginx/sites-available/{{ apollo_full_domain_name }}.conf

# WebSocket upgrade helper
map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

# Upstream points to the Docker container on localhost:8080
upstream apollo3_client {
  server 127.0.0.1:8080;
  keepalive 16;
}

# HTTP (port 80) - used for ACME challenge and redirect to HTTPS
server {
  listen 80;
  server_name {{ apollo_full_domain_name }};

  # Allow ACME challenges (works with both --nginx and --webroot flows)
  location ^~ /.well-known/acme-challenge/ {
    root /var/www/html;
  }

  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name {{ apollo_full_domain_name }};

  ssl_certificate     /etc/letsencrypt/live/{{ apollo_full_domain_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ apollo_full_domain_name }}/privkey.pem;

  client_max_body_size 1024m;

  # Security headers
  add_header X-Content-Type-Options nosniff;
  add_header X-Frame-Options SAMEORIGIN;

  # Apollo3/JBrowse is served at '/' from the Docker container.
  # The Docker container's web server handles:
  #  - /apollo/...  (proxied to collaboration server with websockets/timeouts)
  #  - /config.json (proxied to /jbrowse/config.json)
  #  - static assets at /
  location / {
    proxy_hide_header X-Content-Type-Options; # avoid duplicates as container also sets this
    proxy_hide_header X-Frame-Options;        # avoid duplicates as container also sets this

    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Host  $host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    proxy_read_timeout 3600s;
    proxy_send_timeout 3600s;

    proxy_pass http://apollo3_client;
  }
}

